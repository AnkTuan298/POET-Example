@model POETWeb.Models.ViewModels.AssignmentStudentVM
@using POETWeb.Models.Enums
@{
    ViewData["Title"] = "Assignments";
    var hasClass = Model?.ClassId != null;
}

<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h3 class="mb-1">
                Assignments
                @if (hasClass)
                {
                    <text>• @Model!.ClassName</text>
                }
            </h3>
            <div class="text-muted">
                @if (hasClass)
                {
                    <text>Class ID: @Model!.ClassId</text>
                }
                else
                {
                    <text>Across your joined classes</text>
                }
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Student" asp-action="Index" class="btn btn-soft">Back</a>
        </div>
    </div>

    <div class="section-shell">
        @if (Model?.Items == null || !Model.Items.Any())
        {
            <div class="alert alert-light border mb-0">
                No assignments yet. Enjoy the peace while it lasts.
            </div>
        }
        else
        {
            <div class="row g-3">
                @foreach (var a in Model.Items)
                {
                    var typeText = a.Type switch
                    {
                        AssignmentType.Mcq => "MCQ",
                        AssignmentType.Essay => "Essay",
                        _ => "Mixed"
                    };
                    var badgeCls = a.Type switch
                    {
                        AssignmentType.Mcq => "badge-type badge-type-mcq",
                        AssignmentType.Essay => "badge-type badge-type-essay",
                        _ => "badge-type badge-type-mixed"
                    };

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="ass-card h-100 card-hover card-click"
                             role="button" tabindex="0" aria-label="Open assignment details"
                             data-id="@a.Id"
                             data-title="@a.Title"
                             data-type="@typeText"
                             data-typecls="@badgeCls"
                             data-class="@a.ClassName"
                             data-status="@a.Status"
                             data-due="@(a.DueAt.HasValue? a.DueAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "No due date")"
                             data-duration="@(a.DurationMinutes)"
                             data-max="@a.MaxAttempts"
                             data-used="@a.AttemptsUsed"
                             data-desc="@a.Description"
                             data-start-url="@Url.Action("Take", "Assignment", new { id = a.Id, index = 0 })"
                             data-history-url="@Url.Action("History", "Assignment", new { id = a.Id })">
                            <div class="ass-card__head"></div>
                            <div class="ass-card__body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="ass-card__title d-flex align-items-center gap-2">
                                        @a.Title
                                        <span class="@badgeCls">@typeText</span>
                                    </div>
                                    <span class="badge badge-soft">@a.Status</span>
                                </div>

                                <div class="ass-card__meta mt-1">
                                    <i class="bi bi-collection"></i>
                                    <span class="ms-1">@a.ClassName</span>

                                    @if (a.DueAt.HasValue)
                                    {
                                        <span class="ms-3">
                                            <i class="bi bi-clock"></i>
                                            Due: @a.DueAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="ms-3"><i class="bi bi-clock-history"></i> No due date</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@* MODAL: Assignment details *@
<div class="modal fade" id="assModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header" style="background:linear-gradient(90deg,#6366f1,#22d3ee); color:#fff;">
                <div>
                    <h5 class="modal-title" id="assModalTitle">Assignment</h5>
                    <div class="small opacity-90" id="assModalSubTitle"></div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center gap-2">
                            <span id="assModalTypeBadge" class="badge-type">Type</span>
                            <span class="badge badge-soft" id="assModalStatus">Status</span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-collection"></i> Class</div>
                            <div class="info-value" id="assModalClass">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-clock"></i> Due</div>
                            <div class="info-value" id="assModalDue">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-hourglass-split"></i> Duration</div>
                            <div class="info-value" id="assModalDuration">—</div>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-arrow-repeat"></i> Max attempts</div>
                            <div class="info-value" id="assModalMax">—</div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="info-tile">
                            <div class="info-label"><i class="bi bi-card-text"></i> Description</div>
                            <div class="info-value" id="assModalDesc" style="white-space:pre-wrap;">—</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer d-flex justify-content-between">
                <div class="small" id="assModalHint">Review details before you start.</div>
                <div class="d-flex gap-2">
                    <a id="assModalHistoryBtn" href="#" class="btn btn-outline-secondary">
                        <i class="bi bi-journal-text"></i> Test history
                    </a>
                    <a id="assModalStartBtn" href="#" class="btn btn-grad-sky">
                        <i class="bi bi-play-circle"></i> Start
                    </a>
                    <button type="button" class="btn btn-soft" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-hover {
        transition: transform .12s ease, box-shadow .12s ease;
    }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 24px rgba(0,0,0,.12);
        }

    .badge-type {
        display: inline-block;
        padding: .2rem .5rem;
        font-size: .75rem;
        border-radius: .5rem;
        color: #fff;
    }

    .badge-type-mcq {
        background: linear-gradient(90deg,#5b8cff,#7aa6ff);
    }

    .badge-type-essay {
        background: linear-gradient(90deg,#8b5cf6,#a78bfa);
    }

    .badge-type-mixed {
        background: linear-gradient(90deg,#f59e0b,#ef4444);
    }

    .info-tile {
        background: #fafafa;
        border: 1px solid #eee;
        border-radius: .75rem;
        padding: .75rem 1rem;
    }

    .info-label {
        font-size: .8rem;
        color: #6b7280;
    }

    .info-value {
        font-weight: 600;
        margin-top: .15rem;
    }

    .btn-grad-sky {
        background: linear-gradient(90deg,#38bdf8,#22d3ee);
        color: #fff;
        border: none;
    }

        .btn-grad-sky:hover {
            filter: brightness(.95);
            color: #fff;
        }

    .btn-soft {
        background: #f3f4f6;
        border: 1px solid #e5e7eb;
    }

    .badge-soft {
        background: #eef2ff;
        color: #4f46e5;
    }

    /* Disabled state cho <a> đóng vai trò button */
    .btn-disabled {
        pointer-events: none;
        opacity: .55;
    }

    .text-danger-strong {
        color: #dc2626;
        font-weight: 600;
    }
</style>

@section Scripts {
    <script>
        // Mở modal từ card
        function openAssModalFromEl(el) {
            var title   = el.dataset.title || 'Assignment';
            var type    = el.dataset.type || '—';
            var typeCls = el.dataset.typecls || 'badge-type';
            var cls     = el.dataset.class || '—';
            var status  = (el.dataset.status || '—').trim();
            var due     = el.dataset.due || '—';
            var maxRaw  = el.dataset.max;
            var usedRaw = el.dataset.used;
            var max     = parseInt(maxRaw, 10);     // NaN nếu rỗng
            var used    = parseInt(usedRaw, 10);
            if (isNaN(max)) max = 0;
            if (isNaN(used)) used = 0;

            var desc    = el.dataset.desc || '—';
            var start   = el.dataset.startUrl || '#';
            var hist    = el.dataset.historyUrl || '#';
            var dur     = el.dataset.duration;

            // Fill text
            document.getElementById('assModalTitle').innerText = title;
            document.getElementById('assModalSubTitle').innerText = 'Preview assignment details';

            var typeBadge = document.getElementById('assModalTypeBadge');
            typeBadge.className = typeCls;
            typeBadge.innerText = type;

            document.getElementById('assModalClass').innerText = cls;
            document.getElementById('assModalStatus').innerText = status;
            document.getElementById('assModalDue').innerText = due;
            document.getElementById('assModalDuration').innerText = dur ? (dur + ' min') : '—';
            document.getElementById('assModalMax').innerText = max ? max : '—';
            document.getElementById('assModalDesc').innerText = (desc && desc.trim().length) ? desc : '—';

            // Buttons
            var startBtn = document.getElementById('assModalStartBtn');
            var hintEl   = document.getElementById('assModalHint');
            startBtn.setAttribute('href', start);
            document.getElementById('assModalHistoryBtn').setAttribute('href', hist);

            // Điều kiện cho phép Start:
            // 1) Status phải Open
            // 2) Chưa chạm trần attempts: max == 0 coi như không giới hạn; nếu >0 thì used < max
            var statusOk = status.toLowerCase() === 'open';
            var attemptsOk = (max <= 0) || (used < max);
            var canStart = statusOk && attemptsOk;

            // Cài đặt UI
            function disableStart(reason){
                startBtn.classList.add('btn-disabled');
                startBtn.setAttribute('aria-disabled', 'true');
                startBtn.setAttribute('tabindex', '-1');
                hintEl.classList.remove('text-muted');
                hintEl.classList.add('text-danger-strong');
                hintEl.innerText = reason;
                // chặn click dự phòng
                startBtn.addEventListener('click', preventStartWhenDisabled, { once: true });
            }
            function enableStart(){
                startBtn.classList.remove('btn-disabled');
                startBtn.removeAttribute('aria-disabled');
                startBtn.removeAttribute('tabindex');
                hintEl.classList.remove('text-danger-strong');
                hintEl.classList.add('text-muted');
                // hiển thị attempts nếu có số liệu
                if (max > 0) {
                    hintEl.innerText = 'Attempts: ' + used + ' / ' + max + '. Review details before you start.';
                } else {
                    hintEl.innerText = 'Review details before you start.';
                }
            }

            if (!statusOk) {
                var reason = status.toLowerCase() === 'closed'
                    ? 'This assignment is closed. You cannot start a new attempt.'
                    : 'This assignment is not open yet.';
                disableStart(reason);
            } else if (!attemptsOk) {
                disableStart('You have reached the attempt limit (' + used + ' / ' + max + ').');
            } else {
                enableStart();
            }

            bootstrap.Modal.getOrCreateInstance(document.getElementById('assModal')).show();
        }

        function preventStartWhenDisabled(e){
            if (e.currentTarget.classList.contains('btn-disabled')) {
                e.preventDefault();
                e.stopPropagation();
            }
        }

        // Bind cards
        document.querySelectorAll('.card-click').forEach(function(card){
            card.addEventListener('click', function(){ openAssModalFromEl(this); });
            card.addEventListener('keydown', function(e){
                if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openAssModalFromEl(this); }
            });
        });

        // === Test History stacking (giữ nguyên) ===
        document.addEventListener('click', async function (e) {
          const btn = e.target.closest('#assModalHistoryBtn');
          if (!btn) return;

          e.preventDefault();
          const url = btn.getAttribute('href');
          if (!url || url === '#') return;

          try {
            const resp = await fetch(url, { credentials: 'same-origin' });
            const html = await resp.text();

            const old = document.getElementById('testHistoryModal');
            if (old) old.remove();

            const wrap = document.createElement('div');
            wrap.innerHTML = html;
            const injected = wrap.firstElementChild;
            if (!injected) return;
            document.body.appendChild(injected);

            const openCount = document.querySelectorAll('.modal.show').length;
            const zBase = 1050 + (10 * openCount);
            const modalEl = document.getElementById('testHistoryModal');
            modalEl.style.zIndex = zBase;

            const m = new bootstrap.Modal(modalEl, { backdrop: 'static', keyboard: false, focus: false });
            m.show();

            setTimeout(() => {
              const backs = document.querySelectorAll('.modal-backdrop');
              const newest = backs[backs.length - 1];
              if (newest) {
                newest.style.zIndex = (zBase - 1).toString();
                newest.dataset.for = 'testHistory';
              }
            }, 0);

            modalEl.addEventListener('hidden.bs.modal', () => {
              const bd = document.querySelector('.modal-backdrop[data-for="testHistory"]');
              if (bd) bd.remove();
              document.body.classList.add('modal-open');
              const parent = document.getElementById('assModal');
              if (parent) parent.focus();
            }, { once: true });

          } catch (err) {
            console.error('Cannot open Test History modal:', err);
          }
        });
    </script>
}
