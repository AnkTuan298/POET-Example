@model POETWeb.Models.Domain.Material
@{
    ViewData["Title"] = "Add material";
    var classId = (int)ViewBag.ClassId;
    var className = (string)ViewBag.ClassName;
}

<div class="container-xxl px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-slate-900 m-0">Add material • @className</h4>
        <a class="btn btn-soft-slate" asp-action="Index" asp-route-classId="@classId">Back</a>
    </div>

    <div class="tdash-card p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-action="Create" asp-route-classId="@classId" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ExternalUrl" class="form-label fw-semibold">URL (YouTube/link)</label>
                    <input asp-for="ExternalUrl" class="form-control" placeholder="https://..." />
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Upload file</label>
                    <input name="file" type="file" class="form-control"
                </div>
            </div>

            <div class="mb-3 mt-3">
                <label asp-for="IndexContent" class="form-label fw-semibold">Text content</label>
                <textarea asp-for="IndexContent" class="form-control" rows="5"
                          placeholder="Text..."></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-grad-indigo px-4">Create</button>
                <a class="btn btn-light" asp-action="Index" asp-route-classId="@classId">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
