@{
    ViewData["Title"] = "POET";
    ViewBag.HideLayoutNav = true;
}

<nav class="lp-nav sticky-top bg-white bg-opacity-75 backdrop-blur border-bottom border-slate-200">
    <div class="container-xxl px-4 py-3 d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            <a class="navbar-brand d-inline-flex align-items-center"
               asp-controller="Home" asp-action="Index" aria-label="POET Home">
                <img src="@Url.Content("~/LOGO/POETLOGO.png")"
                     alt="POET"
                     class="brand-logo" />
            </a>
        </div>

        <div class="d-none d-md-flex align-items-center gap-3">
            <a class="btn btn-outline-secondary px-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
            <a class="btn btn-primary px-3" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
