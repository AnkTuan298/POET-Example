                        <!-- book-open -->
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
                             width="26" height="26" fill="none" stroke="currentColor"
                             stroke-width="2" stroke-linecap="round" stroke-linejoin="round" role="img">
                            <path d="M3 5h8a4 4 0 0 1 4 4v10H7a4 4 0 0 0-4 4V5z" />
                            <path d="M13 5h8v14a4 4 0 0 0-4 4h-8" />
                            <path d="M11 8v5" />
                        </svg>
                    </div>
                    <h3 class="h4 fw-bold text-slate-900">Create Classes</h3>
                    <p class="text-slate-600 mb-0">Create comprehensive Class with lessons, assignments, and resources in minutes.</p>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-12 col-md-6 col-lg-4">
                <div class="lp-card p-4 h-100">
                    <div class="lp-icon lp-icon--blue mb-3" aria-label="Manage students">
                        <!-- users -->
