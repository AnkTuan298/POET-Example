@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<nav class="navbar navbar-expand-lg lp-nav bg-white shadow-sm sticky-top py-3">
    <div class="container-xxl px-4">
        <a class="navbar-brand d-flex align-items-center gap-2 fw-bold text-slate-900" asp-area="" asp-page="/Index">
            <img src="~/images/logo.svg" alt="POET logo" class="lp-logo" />
            POET
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navLinks" aria-controls="navLinks" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navLinks">
            <ul class="navbar-nav gap-3">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary px-3 fw-semibold text-white" asp-page="./Login">Back to Login</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="auth-wrap d-flex align-items-center justify-content-center">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5 text-center">

                        <div class="brand-bubble mb-3">
                            <i class="bi bi-envelope-check-fill"></i>
                        </div>

                        <h1 class="h4 fw-bold mb-2 text-slate-900">Check your email</h1>
                        <p class="text-muted mb-4">
                            We’ve sent a password reset link to your email address.
                            Follow the instructions to set a new password.
                        </p>

                        <div class="d-grid gap-2">
                            <a asp-page="./Login" class="btn btn-primary fw-semibold">
                                Return to Login
                            </a>
                            <a asp-page="./ForgotPassword" class="btn btn-outline-secondary">
                                Use a different email
                            </a>
                        </div>

                        <div class="mt-4 small">
                            Didn’t receive the email?
                            <a asp-page="./ForgotPassword" class="link-primary text-decoration-none">Try again</a>.
                        </div>

                    </div>
                </div>

                <p class="text-center text-muted small mt-4 mb-0">
                    © 2025 POET. Professional Online Education Technology.
                </p>
            </div>
        </div>
    </div>
</div>
