@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

<nav class="navbar navbar-expand-lg lp-nav bg-white shadow-sm sticky-top py-3">
    <div class="container-xxl px-4">
        <a class="navbar-brand d-inline-flex align-items-center"
           asp-controller="Home" asp-action="Index" aria-label="POET Home">
            <img src="@Url.Content("~/LOGO/POETLOGO.png")"
                 alt="POET"
                 class="brand-logo" />
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navLinks" aria-controls="navLinks" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navLinks">
            <ul class="navbar-nav gap-3">
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary px-3 fw-semibold text-white" asp-page="./Register">Register</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="auth-wrap d-flex align-items-center justify-content-center">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <!-- Brand / Title -->
                        <div class="text-center mb-4">
                            <div class="brand-bubble mb-3">
                                <i class="bi bi-book-fill"></i>
                            </div>
                            <h1 class="h3 fw-bold mb-1 text-slate-900">Forgot your password?</h1>
                            <p class="text-muted mb-0">Enter the email associated with your account</p>
                        </div>

                        <form method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                            <!-- Email -->
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email"
                                       class="form-control"
                                       autocomplete="username"
                                       aria-required="true"
                                       placeholder="you@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email address</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <!-- Submit -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                    Send reset link
                                </button>
                            </div>

                            <!-- Aux links -->
                            <div class="mt-4 text-center small">
                                <p class="mb-2">
                                    <a asp-page="./Login" class="link-secondary text-decoration-none">
                                        ← Back to login
                                    </a>
                                </p>
                                <p class="mb-0">
                                    <a asp-page="./ResendEmailConfirmation" class="link-secondary text-decoration-none">
                                        Resend email confirmation
                                    </a>
                                </p>
                            </div>
                        </form>

                    </div>
                </div>

                <p class="text-center text-muted small mt-4 mb-0">
                    © 2025 POET. Professional Online Education Technology.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
